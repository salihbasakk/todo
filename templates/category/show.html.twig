{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 style="text-align: center; margin-top: 50px">EDIT THIS CATEGORY</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Category Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Category Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <div style="text-align: center">
        <a href="{{ path('category_index') }}">Go to -> Categories List Page</a>
    </div>
    <tr>
        <td>&nbsp;</td>
    </tr>
    <div style="text-align: center">
        <a style="color: yellowgreen" href="{{ path('category_edit', {'id': category.id}) }}">Edit This Category</a>
    </div>
    <div style="text-align: center">
        {{ include('category/_delete_form.html.twig') }}
    </div>

{% endblock %}
