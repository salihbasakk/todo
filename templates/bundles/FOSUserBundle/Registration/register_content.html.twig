{% trans_default_domain 'FOSUserBundle' %}

<form method="post" action="{{ path('fos_user_registration_register') }}">
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="fos_user_registration_form[email]" placeholder="Email Adresinizi Giriniz" style="border: 1px solid rgba(0,0,0,.15) !important;">
        <small id="emailHelp" class="form-text text-muted">Email adresiniz kimseyle paylaşılmayacaktır.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputUsername1">Kullanıcı Adı</label>
        <input type="username" class="form-control" id="exampleInputUsername1" aria-describedby="emailHelp" name="fos_user_registration_form[username]" placeholder="Kullanıcı Adı Giriniz" style="border: 1px solid rgba(0,0,0,.15) !important;">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Şifre</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="fos_user_registration_form[plainPassword][first]" style="border: 1px solid rgba(0,0,0,.15) !important;">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword2">Şifreyi Tekrar Giriniz</label>
        <input type="password" class="form-control" id="exampleInputPassword2" name="fos_user_registration_form[plainPassword][second]" style="border: 1px solid rgba(0,0,0,.15) !important;">
    </div>
    <input type="hidden" id="fos_user_registration_form__token" name="fos_user_registration_form[_token]" value="{{ csrf_token('registration') }}">
    <input class="btn btn-primary" style="margin-bottom: 10px" type="submit" value="Üye Ol" />
</form>
