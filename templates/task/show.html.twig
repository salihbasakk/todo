{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table100 ver1 m-b-110">
                    <div class="table100-head">
                        <table>
                            <thead>
                            <tr class="row100 head">
                                <th class="cell100 column1" style="text-align: left !important;    width: 10% !important;">Görev Adı</th>
                                <th class="cell100 column2">Sil</th>
                                <th class="cell100 column3">Düzenle</th>
                            </tr>
                            </thead>
                        </table>
                    </div>

                    <div class="table100-body js-pscroll">
                        <table>
                            <tbody>
                            <tr class="row100 body">
                                <td class="cell100 column1" style="text-align: left !important;     width: 10%;">
                                    {{ task.name }}&nbsp;&nbsp;</td>
                                <td class="cell100 column2">
                                    {{ include('task/_delete_form.html.twig') }}&nbsp;</td>
                                <td class="cell100 column3">
                                    <a style="color: #ffffff" href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning" >Düzenle</a>&nbsp;</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div style="text-align: center;     margin: 80px 0 20px 0;">
                        <a style="color: #ffffff" href="{{ path('task_index') }}" class="btn btn-success">Görevler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
