{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1 style="text-align: center; margin-top: 50px">EDIT THIS TASK</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Task Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Task Name</th>
                <td>{{ task.name }}</td>
            </tr>
        </tbody>
    </table>

    <div style="text-align: center">
        <a href="{{ path('task_index') }}">Go to -> Tasks List Page</a>
    </div>
    <tr>
        <td>&nbsp;</td>
    </tr>
    <div style="text-align: center">
        <a style="color: yellowgreen" href="{{ path('task_edit', {'id': task.id}) }}">Edit This Task</a>
    </div>
    <div style="text-align: center">
        {{ include('task/_delete_form.html.twig') }}
    </div>
{% endblock %}
